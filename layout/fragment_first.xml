<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ariane 5 ECA | BepiColombo"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="178dp"
                    android:layout_height="300dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/rocket_ariane" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:text="October 20, 2018 01:45:28 UTC  Ariane Launch Area 3, Kourou" />
            </LinearLayout>


            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click for LiveStream" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/rocket2"
                    android:layout_width="178dp"
                    android:layout_height="280dp"
                    android:paddingBottom="50dp"
                    android:src="@drawable/ariana_j" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="BepiColombo is a joint mission of the ESA and the JAXA and it comprises of two satellites to be launched together: the Mercury Planetary Orbiter (MPO) and the Mercury Magnetospheric Orbiter (MMO). " />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It will perform a comprehensive study of Mercury, including its magnetic field, magnetosphere, interior structure and surface."
                    android:textSize="24sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView><![CDATA[

    tools:layout_editor_absoluteY="136dp" />

]]>
</android.support.constraint.ConstraintLayout>